<p id="notice"><%= notice %></p>

<div id='tag_menu'>
  <span>TAGS</span>
  <ul id='tags'>
    <li><%= link_to 'Fee', {:controller=>'invoices', :action=>'index', :invoice_type=>'fee'} %></li>
    <li><%= link_to 'Rent', {:controller=>'invoices', :action=>'index', :invoice_type=>'rent'} %></li>
     <%# all none rails standard key value pairs passed will appear in the url. ie the url for this link will be .../invoices?invoice_type=rent %>
  </ul>
</div>
<div id='invoice_container'>
  <div id='invoice_summary'>
    <div id='title'>
      <span>Invoices</span>
    </div>
    <%= form_tag(invoices_path, :method => "get", id: "search_form") do %>
       <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Invoices" %>
        <!-- In order to have the "search" icon in the button, we need to use plain HTML instead of using a Rails form helper -->
         <button class="btn" type="submit"><i class="icon-search">search</i></button>
      </div>
    <% end %>

  </div>
  <div>
    <div id="paginator">
      <%= paginate @invoices, :remote => true %>
    </div>
    <table class='invoices'>
      <thead>
      <tr class='header'>
          <th class='generated'>Generated</th>
          <th class='description'>Description</th>
          <th class='tennant'>Tennant</th>
          <th class='amount'>Amount</th>
          <th class='edit'>Edit</th>
          <th class='delete'>Delete</th>
        </tr>
      </thead>

      <tbody id='invoice'>
        <%= render @invoices %>
      </tbody>
    </table>
  </div>
</div>



